# ARCGen V2 Environment Variables
# Copy this file to .env and fill in your actual API keys

# DeepSeek API Configuration
# Get your API key from: https://platform.deepseek.com/api_keys
# Models available: deepseek-chat (V3-0324), deepseek-reasoner (R1-0528)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API Configuration (optional)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Claude API Configuration (optional)
# Get your API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# Custom API endpoints (if using self-hosted models)
CUSTOM_API_ENDPOINT=https://your-custom-endpoint.com/v1

# Debug mode (true/false)
DEBUG=false

# Log level override (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Performance tuning (optional)
# MAX_CONCURRENT_REQUESTS=4
# CHUNK_SIZE=3000
# MEMORY_THRESHOLD=80 